<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bletest.MainActivity" >

    <EditText
        android:id="@+id/editRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
		android:hint="Red Value"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editRed"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editRed"
		android:hint="Green Value"
        android:ems="10" />

    <EditText
        android:id="@+id/editBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editGreen"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editGreen"
		android:hint="Blue Value"
        android:ems="10" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editBlue"
        android:layout_alignRight="@+id/editBlue"
        android:layout_below="@+id/editBlue"
        android:text="Send" />

</RelativeLayout>
